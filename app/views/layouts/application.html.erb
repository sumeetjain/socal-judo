<head> 
	<meta charset="utf-8" /> 

	<title>SoCal Judo</title> 
	<meta name="description" content="<%= controller.action_name %>" /> 

	<!--[if IE]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<%= stylesheet_link_tag 'global' %>
	<%#= stylesheet_link_tag 'jquery-ui' %>
	<%#= stylesheet_link_tag 'tipsy' %>
	<%= stylesheet_link_tag "#{controller.controller_name}/#{controller.action_name}" %>

	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
	<!--script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js"></script-->
	
	<%= csrf_meta_tag %>
</head>

<body>
	<header>
		<a id="logo" href="/">SoCal Judo</a>
		
		<nav class="container">
			<ul>
				<li class="<%= "current" if "#{controller.controller_name}/#{controller.action_name}" == "home/index" %>"><a href="/">Home</a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "coaches" %>"><a href="/coaches">Coaches</a></li>
				<li class="<%= "current" if "#{controller.action_name}" == "philosophy" %>"><a href="/philosophy">Philosophy</a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "services" %>"><a href="/services">Services</a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "extras" %>"><a href="/extras">Extras</a></li>
				<li class="<%= "current" if "#{controller.action_name}" == "faq" %>"><a href="/faq">FAQ</a></li>
				<li class="<%= "current" if "#{controller.controller_name}" == "contacts" %>"><a href="/contact">Contact</a></li>				
			</ul>
			
			<div id="snLinks">
				<a href="http://www.facebook.com/pages/SoCal-Judo/128179520598219"><%= image_tag('global/facebook.png', :alt => 'Facebook') %></a>
				<a href="http://twitter.com/socaljudo"><%= image_tag('global/twitter.png', :alt => 'Twitter') %></a>
			</div>
		</nav>
	</header>
	
	<section id="main">
		<%= render :partial => '/home/index' if "#{controller.controller_name}/#{controller.action_name}" == "home/index" %>
		
		<div id="content" class="container clearfix">
			<%= yield %>
		</div>
		
		<footer class="container">
			SoCal Judo<br />
			30755 E. Loma Linda Rd.<br />
			Temecula, California, 92592<br />
			(951) 699-8969
		</footer>
	</section>

	<%#= javascript_include_tag 'jquery.tipsy' %>
	<%= javascript_include_tag 'global' %>
	<%= javascript_include_tag "#{controller.controller_name}/#{controller.action_name}" %>
</body>
</html>